{
  "name": "@reactjsonforms/chakra-renderers",
  "version": "4.0.0-alpha.0",
  "description": "Chakra Renderer Set for JSON Forms",
  "repository": "https://github.com/eclipsesource/jsonforms",
  "bugs": "https://github.com/eclipsesource/jsonforms/issues",
  "homepage": "http://jsonforms.io/",
  "license": "MIT",
  "directories": {
    "example": "example",
    "src": "src",
    "webpack": "webpack"
  },
  "main": "lib/jsonforms-react-chakra.cjs.js",
  "module": "lib/jsonforms-react-chakra.esm.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/jsonforms-react-chakra.esm.js",
      "require": "./lib/jsonforms-react-chakra.cjs.js"
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:examples-app": "rollup -c rollup.example.config.js",
    "dev": "webpack --config ./webpack/webpack.dev.js && webpack-dev-server --config webpack/webpack.dev.js --env=dev",
    "clean": "rimraf lib coverage dist .nyc_output example/dist 2> /dev/null",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "report": "nyc report --reporter=html",
    "test": "jest --no-cache",
    "test-cov": "jest --no-cache --coverage",
    "doc": "typedoc --name 'JSON Forms React Chakra Renderers' --excludeExternals --theme default --out docs src"
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "chakra",
    "form",
    "forms",
    "json",
    "jsonforms",
    "frontend",
    "generator",
    "input",
    "renderengine",
    "jsonschema",
    "schema",
    "uischema",
    "layout",
    "customization"
  ],
  "peerDependencies": {
    "@chakra-ui/icons": "^2.0.17",
    "@chakra-ui/react": "2.7.1",
    "@chakra-ui/system": "^2.5.1",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@reactjsonforms/core": "workspace:*",
    "@reactjsonforms/react": "workspace:*",
    "framer-motion": "^6.5.1"
  },
  "devDependencies": {
    "@cfaester/enzyme-adapter-react-18": "^0.7.0",
    "@chakra-ui/icons": "^2.0.17",
    "@chakra-ui/react": "2.7.1",
    "@chakra-ui/system": "^2.5.1",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@reactjsonforms/core": "workspace:*",
    "@reactjsonforms/react": "workspace:*",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@types/enzyme": "^3.10.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "copy-webpack-plugin": "^11.0.0",
    "enzyme": "^3.10.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "framer-motion": "^6.5.1",
    "jest": "^26.6.3",
    "jsdom": "^15.2.1",
    "jsdom-global": "^3.0.2",
    "lodash": "^4.17.21",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-import-css": "^3.3.1",
    "rollup-plugin-typescript2": "^0.35.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "source-map-loader": "^4.0.1",
    "source-map-support": "0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typedoc": "^0.24.8",
    "typescript": "4.9.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.tsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
